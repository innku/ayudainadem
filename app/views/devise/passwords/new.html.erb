<div class='devise'>
  <div class='header'>
    <span class='icon'>
      <i class="fa fa-arrow-circle-right fa-lg"></i>
    </span>
    <h2><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>
  </div>
  <div class='content'>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class='grouped-inputs'>
        <label><i class="fa fa-at"></i></label>
        <%= f.email_field :email, placeholder: 'Correo ElectrÃ³nico' , class: 'required' %>
      </div>

      <div class='float'>
        <%= f.button t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: 'push-right btn-default', data: {disable_with: "<i class='fa fa-circle-o-notch fa-spin'></i> cargando..."} %>
        </div>
    <% end %>
    <hr>
    <div class='float'>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
