<% content_for :breadcrumbs do %>
  <div class="breadcrumb">
    <%= link_to 'Dashboard', admin_path %>
    <%= link_to 'Subcategorías', admin_categorias_path %>
  </div>
<% end %>

<div class='container'>
  <div class='row title'>
    <div class='col-9'>
      <span class='icon'>
        <i class="fa fa-th-large fa-lg"></i>
      </span>
      <h3>Todas las Subcategorías</h3>
    </div>
    <div class='col-3 float'>
      <%= link_to '<i class="fa fa-plus"></i> Agregar Subcategoría'.html_safe, new_admin_subcategoria_path , class: 'btn-default push-right mt'%>
    </div>
  </div>
</div>

<table class='table'>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Posicion</th>
      <th>Descripcion</th>
      <th>Categoria</th>
      <th> Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @subcategorias.each do |subcategoria| %>
      <tr>
        <td><%= subcategoria.titulo %></td>
        <td><%= subcategoria.posicion %></td>
        <td><%= subcategoria.descripcion %></td>
        <td>
          <span class='label-green'><%= subcategoria.categoria %></span>
        </td>
        <td class='acciones'>
          <%= link_to '<i class="fa fa-plus-square fa-lg"></i>'.html_safe, admin_subcategoria_path(subcategoria), class: 'show' %>
          <%= link_to '<i class="fa fa-pencil fa-lg"></i>'.html_safe, edit_admin_subcategoria_path(subcategoria), class: 'show' %>
          <%= link_to '<i class="fa fa-trash fa-lg"></i>'.html_safe, admin_subcategoria_path(subcategoria), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
