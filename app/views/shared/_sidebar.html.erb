<div class='title'>
  <span class='icon'>
    <i class="fa fa-list"></i>
  </span>
  <h4>Lista de Categorías</h4>
</div>
<ul class='content sidebar-categorias'>
  <% todas_categorias.each do |categoria|%>
  <% if categoria.subcategorias.count >= 1 %>
  <li style='background:<%= categoria.color %>;'>
    <%= link_to(categoria) do  %>
    <i class="fa fa-bookmark" style='margin-right:10px;'></i><%= categoria %>
    <br>
    <small class='time'>
      (<%= pluralize(categoria.subcategorias.count, 'Subcategoría') %>)
    </small>
    <% end %>
  </li>
  <% end %>
  <% end %>
</ul>

<div class='title'>
  <span class='icon'>
    <i class="fa fa-history"></i>
  </span>
  <h4>Última Actividad</h4>
</div>
<ul class='content'>
  <% ultimos_articulos.each do |articulo| %>
    <%#= link_to content_tag(:i, class: "fa fa-#{articulo.subcategoria.categoria.icon}"), articulo.subcategoria %>
    <li>
      <%= link_to([articulo.subcategoria, articulo]) do  %>
      <p>
        <i class="fa fa-file" style='color:<%= articulo.subcategoria.categoria.color %>; margin-right:10px;'></i><%= articulo.titulo.truncate(30) %>
        <small class='time'><%= time_ago_in_words(articulo.updated_at) %></small>
      </p>
      <% end %>
    </li>
  <% end %>
</ul>
