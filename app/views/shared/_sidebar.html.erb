<div class='title'>
  <span class='icon'>
    <i class="fa fa-history fa-lg"></i>
  </span>
  <h4>Últimos Artículos</h4>
</div>
<ul class='content'>
  <% ultimos_articulos.each do |articulo|%>
    <li>
      <%= link_to([articulo.subcategoria, articulo]) do  %>
        <i class="fa fa-<%= articulo.subcategoria.categoria.icon %> fa-lg" style='color:<%= articulo.subcategoria.categoria.color %>; margin-right:10px;'></i><%= articulo %>
      <% end %>
    </li>
  <% end %>
</ul>

